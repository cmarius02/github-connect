!!! 5
html
  head
    title= title
    link(rel='shortcut icon', href='images/github-icon.ico')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/datepicker.css')
    script(type="text/javascript", src='http://code.jquery.com/jquery-1.8.1.js')
    script(type="text/javascript", src='/javascripts/form.js')
    script(type="text/javascript", src='/javascripts/bootstrap-datepicker.js')

  body

    #container
      #header

        a(href="/")
          #logo

        - if (everyauth.loggedIn)
          a(href="/" + user.user_name + "/notifications")
            .notif-box
              - if (user.unread)
                .notif-unread
              - else
                .notif-read

        #nav
          ul
            li
              a(href="/projects") Projects
            li
              a(href="/ideas") Ideas
            li
              a(href="/challenges") Challenges

        #controls
          - if (!everyauth.loggedIn)
            a(href="/login") Login
          - else
            - if (user)
              = user.points_ideas + user.points_repos + user.points_projects + " "
              | cups for
              a(href="/" + user.user_name)= " " + user.user_name + " "
            a(href="/logout")
              #logout



      #body
        block content



      .spacer
      .spacer

      #footer
        #copyright
          b &copy; Github-connect, 2014
        #logo-footer
        #menu-footer
          ul
            //li
            //  a(href="/about") About
            li
              a(href="/faq") FAQ
            li
              a(href="/contributors") Contributors
            li
              a(href="/contact") Contact

  include ../public/javascripts/analytics.js

  - if (everyauth.loggedIn)
    script var username = "#{user.user_name}"; var cups = "#{user.points_repos+user.points_ideas+user.points_projects}";


  include ../public/javascripts/animations.js
  include ../public/javascripts/facebook.html
